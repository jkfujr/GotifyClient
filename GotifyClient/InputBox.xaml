<Window x:Class="GotifyClient.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="输入" Height="150" Width="300" WindowStartupLocation="CenterOwner"
        MinHeight="150" MinWidth="300" MaxHeight="150" MaxWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="PromptTextBlock" Margin="10" TextWrapping="Wrap"/>
        <TextBox x:Name="InputTextBox" Margin="10" Grid.Row="1"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="确定" Width="75" Margin="10" Click="OkButton_Click"/>
            <Button Content="取消" Width="75" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
